#===========================================
# OWL WRITING TEAM - CLOUDFLARE CONFIGURATION
#===========================================

# Cloudflare Workers AI API Configuration
# Your API Token and Account ID from Cloudflare Dashboard
CF_API_TOKEN=your_cloudflare_api_token_here
CF_ACCOUNT_ID=your_cloudflare_account_id_here
CF_GATEWAY_NAME=arya-ai

#===========================================
# WRITING TEAM SPECIFIC SETTINGS
#===========================================

# Default writing settings
DEFAULT_WRITING_MODE=professional
DEFAULT_TARGET_AUDIENCE=general
DEFAULT_TONE=balanced
MAX_WRITING_TIME_HOURS=3

# Quality thresholds
MIN_FIRST_DRAFT_ACCEPTANCE=85
REQUIRED_SOURCE_ACCURACY=98
ENABLE_CRITICAL_REVIEW=true
ENABLE_FACT_CHECKING=true

#===========================================
# CLOUDFLARE WORKERS AI MODEL PREFERENCES
#===========================================

# Primary model for all writing tasks (with inherent function calling)
PRIMARY_MODEL=@cf/meta/llama-4-scout-17b-16e-instruct
FICTION_MODEL=@cf/meta/llama-4-scout-17b-16e-instruct
NONFICTION_MODEL=@cf/meta/llama-4-scout-17b-16e-instruct
RESEARCH_MODEL=@cf/meta/llama-4-scout-17b-16e-instruct
EDITING_MODEL=@cf/meta/llama-4-scout-17b-16e-instruct
PLANNER_MODEL=@cf/meta/llama-4-scout-17b-16e-instruct
COORDINATOR_MODEL=@cf/meta/llama-4-scout-17b-16e-instruct

# Model hierarchy (Primary → Backup → Fallback)
BACKUP_MODEL=@cf/meta/llama-3-8b-instruct
FALLBACK_MODEL=@cf/meta/llama-3.1-8b-instruct

# Function calling capabilities
ENABLE_FUNCTION_CALLING=true
FUNCTION_CALLING_MODEL=@cf/meta/llama-4-scout-17b-16e-instruct

#===========================================
# OPTIONAL ENHANCEMENTS
#===========================================

# Additional API keys for enhanced functionality
# OPENAI_API_KEY=your_openai_key_here
# GOOGLE_API_KEY=your_google_api_key_here
# SEARCH_ENGINE_ID=your_search_engine_id_here